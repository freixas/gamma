<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.freixas.gamma.AboutDialogController">
   <children>
      <Label maxWidth="1.7976931348623157E308" minWidth="1.0" text="About Gamma" VBox.vgrow="NEVER">
         <font>
            <Font size="18.0" />
         </font>
         <padding>
            <Insets left="10.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <Pane maxHeight="200.0" maxWidth="300.0" minHeight="200.0" minWidth="300.0" prefHeight="200.0" prefWidth="300.0" style="-fx-background-image: url(&quot;gamma-about.png&quot;);">
         <children>
            <Label style="-fx-font-weight: bold; -fx-font-size: 20;" text="Gamma" textFill="#357dc5">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <Label layoutY="30.0" text="A Minkowski spacetime diagram generator">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <Label id="versionLabel" fx:id="versionLabel" layoutY="100.0" text="Version ">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <Label layoutY="180.0" style="-fx-font-style: italic;" text="Copyright Â© 2021-2022 by Antonio Freixas">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </Pane>
      <GridPane id="buttonBar" fx:id="buttonBar" hgap="10.0" maxWidth="1.7976931348623157E308" minWidth="1.0" VBox.vgrow="NEVER">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button id="closeButton" fx:id="closeButton" layoutX="177.0" layoutY="13.0" mnemonicParsing="false" onAction="#handleClose" prefWidth="100.0" text="Close" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
